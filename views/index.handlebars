<div class="container">
    <div class="row">
        <div class="col-xs-12 text center" id="top-bar">
            <h1>EAT DA BURGER! </h1>
        </div>
        <div class="col-xs-6 text center" class="task">
            <div class="row">
                <h2>Bob's Favorite Cheesiest Burgers of the Day</h2>
                <h4>Which one of these fan favorites would you like to devour first?</h4>
                
                {{#each burger_data}} {{#unless this.devoured}}
                <div class="col-xs-9 text center" class="task">
                   <pre>{{this.burger_name}}</pre> 
                </div>
                <div class="col-xs-3 text center" class="task">
                    <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                        <input type="hidden" name="burger_id" type="text" value={{this.id}}>

                        <button type="submit" class="btn btn-default">
                            DEVOUR IT!
                        </button>

                    </form>
                </div>
                {{/unless}} {{/each}}
                
            </div>
        </div>
        <div class="col-xs-6 text center" class="task">
            <h2>Devoured Burgers</h2>
            {{#each burger_data}} {{#if this.devoured}}
            <input class="form-control" type="text" placeholder="{{this.burger_name}}" readonly> {{/if}} {{/each}}
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <h2>Create a new Burger of the Day</h2>
        <div class="col-xs-12 text center enter_section">
            <form action="/burgers/create" method="POST">
                <input type="text" id="burger_name" class="form-control" value="">
                <br>
            <p>Enter a burger you'd like to create & submit!</p>
            
                <button id= "newBurger" type="submit" class="btn- btn-primary" id="text-enter-button">SUBMIT</button>
            </form>
        </div>
    </div>
</div>
