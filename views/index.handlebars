<div class="mainContainer">
    <header>

    </header>

    <br>
    <br>
    <div class="container">
        <div class="row">
            <div class="col-lg-4 text center">
                <div class="container">
                    <h3>Burgers of the Day</h3>
                    <hr>
                    <p>Which one of these cheesy fan favorites would you like to devour first?</p>

                    <hr>
                    <strong> {{#each burger_data}} {{#unless this.devoured}} {{this.burger_name}}
                    


                    <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                        <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                        <br>
                        
                        <button type="submit" class="btn btn-primary">
                            <strong>DEVOUR IT!</strong>
                        </button>

                    </form>
                    <hr> {{/unless}} {{/each}} </strong>



                </div>

            </div>
            <div class="col-lg-4 text center">
                <div class="container">
                    <h3>Create a New Burger</h3>
                    <hr>
                    <p>Enter a burger you'd like to create & submit!</p>

                    <form action="/burgers/create" method="POST">
                        <input type="text" name="burger_name" class="form-control" value="" id="enter_text">
                        <br>

                        <button type="submit" class="btn btn-primary">
                            <strong>SUBMIT!</strong>
                        </button>
                    </form>

                </div>
            </div>


            <div class="col-lg-4 text center">
                <div class="container">
                    <h3>Devoured Burgers</h3>
                    <hr>{{#each burger_data}} {{#if this.devoured}}
                    <br>
                    <input class="form-control" type="text" placeholder="{{this.burger_name}}" readonly> {{/if}} {{/each}}

                </div>
            </div>
        </div>
    </div>
</div>